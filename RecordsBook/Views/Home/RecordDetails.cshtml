@model List<RecordsBook.Models.ViewModels.RecordDetailViewModel>

@{
    int details_count = Model.Count;
    int index = 0;
}

<table id="records" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>類別</th>
            <th>日期</th>
            <th>金額</th>
        </tr>
    </thead>
    <tbody>
        @foreach ( var record in Model )
        {
            <tr>
                <td>@(++index)</td>
                <td>@(record.GroupName)</td>
                <td>@(record.Date.ToString( "yyyy-MM-dd" ))</td>
                <td>@(record.Money.ToString( "#,###" ))</td>
            </tr>
        }
    </tbody>
</table>

