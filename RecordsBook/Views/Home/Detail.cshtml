@model List<RecordsBook.Models.ViewModels.DetailViewModel>

@{ 
    int details_count = Model.Count;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>類別</th>
        <th>日期</th>
        <th>金額</th>
    </tr>
    @for ( int i = 0 ; i < details_count ; i++ )
    {
        <tr>
            <td>@(i+1)</td>
            <td>@(Model[i].GroupName)</td>
            <td>@(Model [i].Date.ToString( "yyyy-MM-dd" ))</td>
            <td>@(Model [i].Money.ToString( "N0" ))</td>
        </tr>
    }    
</table>